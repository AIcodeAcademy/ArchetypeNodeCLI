    {
      "code": "F3",
      "name": "file-transformation",
      "status": "draft"
    }
  ],
  "containers": [
    {
      "code": "C1_node-cli",
      "archetype": "node-cli",
      "language": "typescript",
      "framework": "none",
      "architecture": "layered"
    }
  ],
  "data-models": [
    {
      "entity": "Command",
      "attributes": ["name!", "description", "options", "arguments", "action", "group?"]
    },
    {
      "entity": "Option",
      "attributes": ["flag!", "description", "defaultValue?", "required", "valueType"]
    },
    {
      "entity": "Argument",
      "attributes": ["name!", "description", "required", "valueType"]
    },
    {
      "entity": "Environment",
      "attributes": ["configFilePath!", "logLevel!", "prefix?", "nodeEnv?"]
    },
    {
      "entity": "Configuration",
      "attributes": ["sourceFolder!", "targetFolder!", "globs!", "filePath?", "environment?"]
    },
    {
      "entity": "Logger",
      "attributes": ["level", "useColors", "outputStream"]
    },
    {
      "entity": "FileTransformation",
      "attributes": ["sourcePaths", "targetPaths", "transformers", "globPatterns?"]
    },
    {
      "entity": "FileEntry",
      "attributes": ["path!", "content", "metadata", "transformedContent?", "targetPath?"]
    },
    {
      "entity": "Transformer",
      "attributes": ["name!", "transform", "options?"]
    },
    {
      "entity": "LogEntry",
      "attributes": ["timestamp!", "level!", "message!", "context?", "source?", "correlationId?"]
    }
  ]
}