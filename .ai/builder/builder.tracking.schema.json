{
  "project-name": "",
  "container": "{{container | slug}}",
  "features": [
    {
      "slug": "{{feature | slug}}",
      "plan": "/containers/{{container | slug}}/docs/{{feature | id}}/{{plan | slug}}.plan.md",
      "status": "{{: planned | implemented | pending  }}",
      "tasks":[
        {
          "id": "t{{#}}",
          "slug": "{{container | id}}-{{feature | id}}-{{task | id}}",
          "task": "/containers/{{container | slug}}/docs/{{feature | id}}/{{task | id}}.task.md",
          "status": "{{: planned | prompted | implemented | pending }}",
          "git": "{{ git id for the task commit }}"
        }
      ]
    }
  ]
}