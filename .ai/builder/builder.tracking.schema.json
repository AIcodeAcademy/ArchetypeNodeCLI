{
  "project-name": "{{ project name }}",
  "container": {
    "slug": "{{ container | slug }}",
    "folder": "/containers/{{ slug }}"
  },
  "features": [
    {
      "slug": "{{ feature.slug }}",
      "folder": "{{ container.folder }}/docs/{{ feature.slug }}",
      "plan": "{{ feature.folder }}/{{ feature.slug }}.plan.md",
      "prompt": "{{ feature.folder }}/{{ feature.slug }}.prompt.md",
      "status": "{{: planned | prompted | implemented }}",
      "git": "{{ git commit hash for the feature implementation }}"
    }
  ]
}