{
  "project-name": "{{ project name }}",
  "container": {
    "id": "{{ container | id }}",
    "slug": "{{ container | slug }}",
    "folder": "/containers/{{ slug }}"
  },
  "plans": [
    {
      "feature": {
        "id": "{{ feature | id }}",
        "slug": "{{ feature | slug }}",
        "folder": "{{ container.folder }}/docs/{{ feature.id }}"
      },
      "plan": "{{ feature.folder }}/{{ feature.slug }}.plan.md",
      "status": "{{: planned | implemented | pending }}",
      "tasks": [
        {
          "id": "t{{#}}",
          "slug": "{{ container.id }}-{{ feature.id }}-{{ task.id }}",
          "task": "{{ feature.folder }}/{{ task.slug }}.task.md",
          "status": "{{: planned | prompted | implemented | pending }}",
          "git": "{{ git commit hash for the task implementation }}"
        }
      ]
    }
  ]
}